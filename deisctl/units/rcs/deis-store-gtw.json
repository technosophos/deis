{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"ceph-gtw",
      "labels":{
         "name":"ceph-gtw",
         "provides": "deis-object-storage"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"ceph-gtw",
         "version":"1",
         "type":"cmd"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"ceph-gtw",
               "version":"1",
               "type":"cmd"
            }
         },
         "spec":{
           "containers":[
               {
               "name": "ceph-gtw",
               "image": "smothiki/store-gateway:git-9d97e8e",
               "ports":[
                 { "containerPort": 8888}
                   ],
                "env":[
                  {
                    "name":"EXTERNAL_PORT",
                    "value":"8888"
                  },
                  {
                      "name":"HOST",
                      "value":"172.17.8.100"
                    }
                ]
               }
             ]
         }
      }
   }
}
